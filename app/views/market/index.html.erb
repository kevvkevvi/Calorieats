  <%= label :user, :number4, 'Carrot (price: 0.52, calories: 186)', class: 'col-form-label' %>
  <%= number_field :user, :number4, :value => 0, min:0, max:200,class: 'form-control'%><br>
  <%= label :user, :number5, 'Milk (price: 2.65, calories: 677)', class: 'col-form-label' %>
  <%= number_field :user, :number5, :value => 0, min:0, max:200,class: 'form-control'%><br>
  <%= label :user, :number6, 'Banana (price: 0.79, calories: 404)', class: 'col-form-label' %>
