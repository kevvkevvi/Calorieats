  <%= label :user, :number2, 'Lamb (price: 19.99, calories: 1331)', class: 'col-form-label' %>
  <%= number_field :user, :number2, :value => 0, min:0, max:200,class: 'form-control'%><br>
  <%= label :user, :number3, 'Broccoli (price: 2.2, calories: 153)', class: 'col-form-label' %>
