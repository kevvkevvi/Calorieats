<%# Our "base" layout should be a valid HTML document. %>
<%= stylesheet_link_tag "application.css" %>
<!DOCTYPE html>
<html>
  <head>
    <title>Calorieats</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%# These classes come from the Bootstrap CSS framework. %>
    <nav class="topnav navbar-expand-lg bg-success text-white mb-3">
      <h1 class="title">Calorieats</h1>
      <%= link_to "Calculator", calculator_index_path %>
      <a href="#market">Market</a>
      <div class="topnav-right">
      <%= link_to "Log out", users_logout_path %>
      </div>
    </nav>
    <div class="container">
      <%# Render "flash" messages in our application. This loads _flash.erb %>
      <%= render 'layouts/flash' %>
      <main id="main">
        <%= yield %>
      </main>
    </div>
  </body>
</html>

