<% if flash[:notice] %>
  <%= content_tag :h1, flash[:notice] %>
<% else %>
  <%= content_tag :h1, "Please Sign up" %>
<% end %>
<%= form_tag url: users_registerprocess_path do %>
  <%= label :user, :username, 'Username', class: 'col-form-label' %>
  <%= text_field :user, :username, class: 'form-control', minlength:'3', required:'true'%><br>
  <%= label :user, :password, 'Password', class: 'col-form-label' %>
  <%= text_field :user, :password, class: 'form-control', type: 'password', minlength:'3', required:'true' %><br>
  <%= link_to "Sign In", users_login_path , class: 'btn btn-secondary' %>
  <%= submit_tag "Sign Up!", class: 'btn btn-primary'%>
<% end %>
